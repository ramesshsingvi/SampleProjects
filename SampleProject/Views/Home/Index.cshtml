}
<div class="row">

    <div class="col-md-3 col-sm-4">
        <div class="wrimagecard wrimagecard-topimage">
            <a href="@Url.Action("Index", "Dashboard")">
                <div class="wrimagecard-topimage_header" style="background-color: #FFE6B5">
                    <center><i class="fa fa-tachometer-alt" style="color:#FF9331"> </i></center>
                </div>
                <div class="wrimagecard-topimage_title">
                    <h4>
                        Dashboard
                        <div class="pull-right badge" id="WrGridSystem"></div>
                    </h4>
                </div>
            </a>
        </div>
    </div>

    <div class="col-md-3 col-sm-4">
        <div class="wrimagecard wrimagecard-topimage">
            <a href="@Url.Action("Index", "Timesheet")">
