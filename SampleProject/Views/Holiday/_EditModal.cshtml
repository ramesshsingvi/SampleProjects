@using TrustonTap.Common.Models;

@model Holiday

@using (Html.BeginForm("Edit", "Holiday", FormMethod.Post))
{
    <!-- Modal -->
    <div id="holidayModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                @Html.HiddenFor(x=>x.ID)
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Edit Holiday</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Date</label>
                        @Html.TextBoxFor(x => x.Date, "{0:dd/MM/yyyy}", new { required = true, @class = "datepicker form-control" })
                    </div>
                    <div class="form-group">
                        <label>Region</label>
                        @Html.CustomEnumDropDownListFor(x => x.Region, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        @Html.TextBoxFor(x=>x.Description, new { @class = "form-control", maxlength = "50" })
                    </div>
                    <div class="form-group">
                        <label>Notes</label>
                        @Html.TextAreaFor(x=>x.Notes, new { @class = "form-control", maxlength = "255" })
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-info pull-left" data-dismiss="modal"><i class="fa fa-times fa-md"></i> Close</button>
                    <button id="btnSave" type="submit" class="btn btn-info"><i class="fa fa-save fa-md"></i> Save</button>
                </div>
            </div>
        </div>
    </div>
}