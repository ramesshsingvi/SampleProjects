@using TrustonTap.Common.Models
@using System.Collections.Generic;
@using TrustonTap.Web.ViewModels;

@model CarerHoliday


    @Html.HiddenFor(x => x.ID)
    @Html.HiddenFor(x => x.CarerID)
    @Html.HiddenFor(x => x.CreatedDate)

<div class="container">
    <div class="row">
        <div class="form-group">
            <div class="col-xs-2"><label>Holiday Start Date:</label></div>
            <div class="col-xs-4">
                <div class="input-group">
                    @Html.TextBoxFor(x => x.DateFrom, "{0:dd/MM/yy}", new { @class = "datepicker form-control" })
                </div>
            </div>
            <div class="col-xs-2"><label>Holiday End Date:</label></div>
            <div class="col-xs-4">
                <div class="input-group">
                    @Html.TextBoxFor(x=>x.DateTo, "{0:dd/MM/yy}", new { @class = "datepicker form-control" })
                </div>
            </div>
        </div>
    </div>
</div>